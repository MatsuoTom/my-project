# Flake8 configuration file

[flake8]
# Maximum line length
max-line-length = 100

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov,
    .coverage

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # F401: imported but unused (common in __init__.py)
    # F403: 'from module import *' used
    # F405: name may be undefined

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403,F405
    */ui/*.py:E402
    */streamlit_*.py:E402

# Maximum complexity
max-complexity = 15

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
