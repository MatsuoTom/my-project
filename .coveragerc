# Coverage.py configuration file

[run]
source = 
    common
    life_insurance
    pension_calc

omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */.venv/*
    */venv/*
    */ui/*
    */streamlit_app*.py

[report]
precision = 2
show_missing = True
skip_covered = False

exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml
